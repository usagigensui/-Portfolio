<!--ヘッダー呼び出し-->
<%= render "layouts/header" %>

<div class="mypage">
  <h2>マイページ</h2>

  <!--フラッシュメッセージ-->
  <%= flash[:notice] %>
  <%= flash[:error] %>

  <p><%= @user.email %></p>

  <div class="row">
    <nav class="col-md-4">
      <ul class="nav flex-column">
        <li class="nav-item">
          <%= link_to "新しいプロフィールを作成", new_profile_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "プロフィールを削除", profiles_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "退会する", mypage_alert_path, class: "nav-link" %>
        </li>
      </ul>
    </nav>

    <!--プロフィール一覧-->
    <main class="col-md-8 row">
      <% @user.profiles.each do |profile| %>
        <div class="col-md-4">
          <!--カード-->
          <div class="card">
             <%= link_to profile_path(profile.code) do %>
            <%= attachment_image_tag profile, :image, class: "card-img-top", fallback: "cat.png" %>

            <!--カードボディ-->
            <div class="card-body">
              <h5 class="card-title"><%= profile.name %></h5>
              <p class="card-text"><%= profile.introduction.truncate(20) %></p>
            </div>
            <% end %>

            <!--カードフッター-->
            <div class="card-footer nav nav-fill text-muted ">
              <!--プロフィール編集ページへのリンク-->
              <%= link_to edit_profile_path(profile), class: "nav-link" do %>
                <i class="fas fa-cog"></i>
              <% end %>
              <!--メールボックスへのリンク-->
              <%= link_to inquiries_path(profile), class: "nav-link" do %>
                <i class="fas fa-mail-bulk"></i>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </main>
  </div>
</div>
<!--フッター呼び出し-->
<%= render "layouts/footer" %>