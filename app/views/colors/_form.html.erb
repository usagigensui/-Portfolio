<%= form_with model: [profile, profile.color], url: colors_path(profile.code), local:true do |f| %>

  <!--エラーメッセージ-->
  <%= render "layouts/error", model: f.object %>

  <div class="form-group mb-3">
    <%= f.label :text, "文字色", class: "form-label" %>
    <%= f.select :text, Color.texts.keys, {}, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :background, "背景色", class: "form-label" %>
    <%= f.select :background, Color.backgrounds.keys, {}, class: "form-control" %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :accent, "アクセントカラー", class: "form-label" %>
    <%= f.select :accent, Color.accents.keys, {}, class: "form-control" %>
  </div>

  <!--<div class="form-check form-check-inline mb-3">-->
  <!--  <#%= radio_button_tag 'theme', 'default', class: "form-check-input" %>-->
  <!--  <#%= label_tag("theme_default", "デフォルト") %><br>-->
  <!--</div>-->

  <div class="form-group mb-3">
    <%= f.submit "確定", class: "btn btn-outline-success" %>
  </div>

<% end %>