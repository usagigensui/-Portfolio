<!--ヘッダー呼び出し-->
<%= render "layouts/header" %>
<h2>ログイン</h2>

<!--フォーム-->
<%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <!--エラーメッセージ-->
  <%= flash[:error] %>
  <%= flash[:alert] %>
  <%= flash[:notice] %>

  <div class="mb-3">
    <%= f.label :email, class: "form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control col-6" %>
  </div>

  <div class="mb-3">
    <%= f.label :password, class: "form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-4" %>
  </div>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-outline-secondary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<!--フッター呼び出し-->
<%= render "layouts/footer" %>
