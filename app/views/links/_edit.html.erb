<div class="modal-dialog">
  <div class="modal-content">

    <div class="modal-header">
      <h2 class="modal-title">リンクを編集</h2>
      <!--閉じるボタン-->
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

    <!--フォーム-->
    <%= form_with(model: [profile, link], url: link_path(profile.code, link.id), local: true) do |f| %>
      <div class="modal-body text-left">
        <div class="form-group mb-3">
          <%= f.label :url, "URL" %>
          <%= f.text_field :url, autofocus: true, autocomplete: "https://minepage.com", class: "form-control" %>
        </div>
        <div class="form-group mb-3">
          <%= f.label :category, "カテゴリー" %>
          <%= f.select :category, Link.categories.keys, {prompt: "選択してください"}, class: "custom-select" %>
        </div>
      </div>

      <div class="modal-footer">
        <div class="actions">
          <%= f.submit "修正", class: "btn btn-outline-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>