<div class="modal-dialog">
  <div class="modal-content">

    <div class="modal-header">
      <h2 class="modal-title">予定を追加</h2>
      <!--閉じるボタン-->
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

    <!--フォーム-->
    <%= form_with(model: [profile, schedule], url: schedules_path, local: true) do |f| %>
      <div class="modal-body text-left">
        <!--エラーメッセージ-->
        <%= render "layouts/error", model: f.object %>
        <div class="mb-3">
          <%= f.label :title, "タイトル", class: "form-label" %>
          <%= f.text_field :title, autofocus: true, autocomplete: "タイトル", class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :start_date, "開始日時", class: "form-label" %>
          <%= f.datetime_field :start_date, autofocus: true, autocomplete: "XXXX-XX-XX", class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :end_date, "終了日時", class: "form-label" %>
          <%= f.datetime_field :end_date, autofocus: true, autocomplete: "XXXX-XX-XX", class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :body, "詳細", class: "form-label" %>
          <%= f.text_area :body, autofocus: true, class: "form-control" %>
        </div>
      </div>

      <div class="modal-footer">
        <div class="actions">
          <%= f.submit "投稿", class: "btn btn-outline-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>